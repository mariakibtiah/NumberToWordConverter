@{
    ViewData["Title"] = "Home Page";
}
@model NumberToWordConverter.Models.NumberConverterModel

<div class="text-center">
    <h1 class="display-4">Convert Number To Word</h1>
    <form asp-action="ProcessResult" asp-controller="Home" method="get">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="input" class="control-label"></label>
            <input asp-for="input" class="form-control" />
            <span asp-validation-for="input" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
